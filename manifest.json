{
  "name": "Idle-Thumbs",
  "version": "0.0.1",
  "description": "A Chrome extension for listening to Idle Thumbs podcasts",
  "manifests": {
    "npm": "package.json",
    "bower": "bower.json",
    "chromeExtension": {
      "name": "Idle Thumbs",
      "dest": "build/manifest.json",
      "manifest_version": 2,
      "icons": {
        "128": "images/icons/puffin128.png"
      },
      "browser_action": {
        "default_icon": "images/icons/puffin16.png",
        "default_popup": "views/player.html"
      }
    }
  }
}
